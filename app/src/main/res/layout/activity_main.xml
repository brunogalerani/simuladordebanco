<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:padding="20dp"
    tools:context="app.com.sistemadebanco.MainActivity">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <RadioGroup
        android:id="@+id/radioGroupInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewLogo"
        android:layout_marginTop="@dimen/margin_top_radio_group">

        <RadioButton
            android:id="@+id/radioButtonResidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simulador_residencia" />

        <RadioButton
            android:id="@+id/radioButtonVeiculos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/simulador_veiculos" />

    </RadioGroup>

</RelativeLayout>
